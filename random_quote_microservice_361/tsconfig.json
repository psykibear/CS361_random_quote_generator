{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }